<h1>Questions of test <%= @test.title %> level <%= @test.level %> </h1>

<p><%= link_to 'New question', new_test_question_path %></p>

<table>
  <tr>
    <th> id</th>
    <th>body</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @questions.each do |question| %>
    <tr>
      <td><%= question.id %></td>
      <td><%= question.body %></td>
      <td>
        <%= link_to 'Show', question_path(question),
                            method: :get%> |
        <%= link_to 'Edit', edit_question_path(question) %> |
        <%= link_to 'Delete', question_path(question),
                              method: :delete,
                              data: {confirm: "Are you shure?"}%>
      </td>
    </tr>
  <% end%>
</table>

<p><%= link_to 'Back', tests_path %></p>
