<p id="notice"><%= notice %></p>

<p>
  <strong>Body:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Test:</strong>
  <%= @question.test.title %>
</p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', test_path(@question.test) %>

<p>
  <h4>Answers:</h4>
  <ol>
    <%= render @question.answers %>
  </ol>
  <br>
  <%= link_to 'New answer', new_question_answer_path(@question) %>
</p>
