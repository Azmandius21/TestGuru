<%= form_with(model:[@question, @answer], local: true) do |form| %>
  <% if answer.errors.any? %>
    <%= render '/shared/errors', resource: @answer %>
  <% end %>

  <h1><%= answer_header(@answer)%></h1>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
