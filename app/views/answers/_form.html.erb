<%= form_with(model: answer, local: true) do |form| %>
  <% if answer.errors.any? %>
    <%= render '/shared/errors', resource: @answer %>
  <% end %>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_field :body %>
  </div>

  <div class="field">
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>

  <div class="field">
    <%= form.label :questioin_id %>
    <%= form.number_field :questioin_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
