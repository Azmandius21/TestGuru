<nav class="navbar bg-light px-4">
  <%= link_to 'Test Guru', tests_path, class: 'navbar-brand' %>
  <%= link_to 'Gurus Badges', user_badges_path(current_user), class: 'navbar-brand' %>
  <% if is_user_admin?(current_user) %>
    <%= link_to 'Test Guru Admin', admin_tests_path, class: 'navbar-brand' %>
  <% end %>

  <span class="navbar-text">
    <% if user_signed_in? %>
        <%= t('.welcome', email: current_user.email) if current_user.present? %>
        <%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('.signup'), new_user_registration_path %> |
      <%= link_to t('.login'), new_user_session_path %>
    <% end %>
  </span>

</nav>
