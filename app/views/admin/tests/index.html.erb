<div class="row justify-content-center mt-3">

  <div class="navbar-nav">
    <%= link_to t('.new_test'), new_admin_test_path %>
    <%= link_to t('.gists'), admin_gists_path %>
    <%= link_to "Badges", admin_badges_path %>
  </div>

  <div class="col col-md-6">

    <h1 class="row justify-content-center"><%= t('.header')%></h1>
      
    <div class="mt-3">
      <%= render 'shared/errors', resource: @test %>

      <table class="table table-striped">
        <head>
          <tr class= "container text-center">
            <th scope="col" class='sort-by-title pointer'>
              <%= t('.title')%>
              <%= octicon 'arrow-up', class: 'text-success hide' %>
              <%= octicon 'arrow-down', class: 'text-success hide' %>
            </th>
            <th scope="col"><%= t('.level')%></th>
            <th scope="col"><%= t('.questions')%></th>
            <th scope="col" colspan="3"><%= t('.actions')%></th>
          </tr>
        </head>
        <body>
          <%= render @tests %>
        </body>
      </table>
    </div>
  </div>
</div>
